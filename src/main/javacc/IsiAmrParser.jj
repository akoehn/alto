SKIP : { " " | "\t" | "\n" | "\r" }

TOKEN :
{
    <NAME: ((["a"-"z", "A"-"Z", "-", "_", "0"-"9", "."])+ )> |
    <EDGE: [":"] (~[" ", "\t", "\n"])*> |
    <VAR:  ["?"] ((["0"-"9"])+)> |
    <APPLY: "+" ([" ", "\t", "\r", "\n"])* "apply"> |
    <DOUBLE_QUOTED_TOKEN: "\"" (~["\""])* "\"">
}

